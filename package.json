{
  "name": "chefbook-next",
  "version": "1.0.0",
  "description": "An Application for recipes to cook.",
  "repository": "git@github.com:jbrousseau/chefbook-next.git",
  "main": "index.js",
  "scripts": {
    "schema-up": "./backend/scripts/run-schema",
    "schema-down": "psql -f backend/schema/database/global-drop.sql",
    "schema": "npm run schema-down && npm run schema-up",
    "postinstall": "sh scripts/createDefaultConfig.sh",
    "bundle:analyze": "ANALYZE_BUNDLE=true yarn dev",
    "bundle:view": "webpack-bundle-analyzer .next/stats.json -h 0.0.0.0 -p 8080",
    "fix": "standard --fix",
    "test": "standard && jest",
    "dev": "node backend/server.js",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node backend/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.1",
    "apollo-client": "^2.0.3",
    "apollo-link": "^1.0.3",
    "apollo-link-http": "^1.2.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-preset-env": "^1.4.0",
    "compression": "^1.7.1",
    "express": "^4.15.2",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "helmet": "^3.9.0",
    "isomorphic-unfetch": "^2.0.0",
    "lorem-ipsum": "^1.0.4",
    "material-ui": "next",
    "material-ui-icons": "^1.0.0-beta.17",
    "next": "^4.2.0-canary.1",
    "nprogress": "^0.2.0",
    "postgraphql": "^3.2.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-apollo": "^2.0.1",
    "react-dom": "^16.1.1",
    "react-ga": "^2.2.0",
    "react-intl": "^2.3.0",
    "recompose": "^0.26.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "jest": "^21.2.1",
    "polyfill": "^0.1.0",
    "sinon": "^4.1.2",
    "standard": "^10.0.3",
    "webpack-bundle-analyzer": "^2.8.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/setup.tests.js"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "presets": "next/babel"
      },
      "production": {
        "presets": "next/babel"
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    },
    "plugins": [
      [
        "transform-define",
        "./config.js"
      ],
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "components": "./components"
          }
        }
      ]
    ]
  }
}
