{
  "name": "chefbook-next",
  "version": "1.0.0",
  "description": "An Application for recipes to cook.",
  "repository": "git@github.com:jbrousseau/chefbook-next.git",
  "main": "index.js",
  "scripts": {
    "schema-up": "./backend/scripts/run-schema",
    "schema-down": "psql -f backend/schema/database/global-drop.sql",
    "schema": "npm run schema-down && npm run schema-up",
    "postinstall": "sh scripts/createDefaultConfig.sh",
    "bundle:analyze": "ANALYZE_BUNDLE=true yarn dev",
    "bundle:view": "webpack-bundle-analyzer .next/stats.json -h 0.0.0.0 -p 8080",
    "fix": "standard --fix",
    "test": "standard && jest",
    "dev": "node backend/server.js",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node backend/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-transform-define": "^1.2.0",
    "babel-preset-env": "^1.4.0",
    "express": "^4.15.2",
    "graphql": "^0.9.5",
    "isomorphic-fetch": "^2.2.1",
    "lorem-ipsum": "^1.0.4",
    "next": "^2.3.0-alpha1",
    "node-fetch": "^1.6.3",
    "postgraphql": "^3.2.0",
    "react": "^15.5.4",
    "react-addons-css-transition-group": "^15.5.2",
    "react-addons-transition-group": "^15.5.2",
    "react-apollo": "^1.1.2",
    "react-dom": "^15.5.4",
    "react-ga": "^2.2.0",
    "react-intl": "^2.3.0",
    "react-md": "^1.0.13",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "standard": "^10.0.2",
    "webpack-bundle-analyzer": "^2.8.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "next/babel"
        ]
      }
    },
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "transform-define",
        "./config.js"
      ]
    ]
  }
}
